<% provide :navbar_title, "БАРАХЛА.НЕТ!" %>
<%= render "layouts/navbar" %>
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="p-4 border-b">
        <h1 class="text-2xl font-bold text-gray-800">Мои чаты</h1>
      </div>

      <div class="p-6 md:p-8">
        <% if @chats.any? %>
          <div class="space-y-4">
            <% @chats.each do |chat| %>
              <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                <div class="flex justify-between items-start">
                  <div>
                    <h2 class="text-lg font-semibold text-gray-800">
                      <%= link_to chat.advertisement.title, chat_path(chat), class: "hover:text-blue-600" %>
                    </h2>
                    <p class="text-sm text-gray-500">
                      <% if chat.ad_owner == current_user %>
                        С покупателем: <%= chat.user.email %>
                      <% else %>
                        С продавцом: <%= chat.ad_owner.email %>
                      <% end %>
                    </p>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= l(chat.created_time, format: :short) %>
                  </div>
                </div>
                <% if last_message = chat.messages.order(:created_at).last %>
                  <div class="mt-2 text-sm text-gray-600 truncate">
                    <span class="font-medium"><%= last_message.sender == current_user ? 'Вы' : last_message.sender.email %>:</span>
                    <%= last_message.text %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <h3 class="mt-2 text-lg font-medium text-gray-600">Нет активных чатов</h3>
            <p class="mt-1 text-gray-500">У вас пока нет активных чатов по объявлениям.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>