<div class="min-h-screen bg-gradient-to-br from-blue-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-gray-900">Редактирование объявления</h1>
      <p class="mt-2 text-gray-600">Измените данные объявления</p>
    </div>

    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6 md:p-8">
      <%= form_with(model: @advertisement, local: true,
                    data: { controller: "advertisements" },
                    class: "space-y-6") do |form| %>

        <!-- Заголовок -->
        <div>
          <%= form.label :title, "Заголовок объявления", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title,
                              class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <!-- Категория (readonly) -->
        <div>
          <%= form.label :category_id, "Категория", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :category_id,
                          options_for_select(@categories.map { |id, name| [name, id] }, @advertisement.category_id),
                          { include_blank: false },
                          class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md",
                          disabled: true,
                          data: { advertisements_target: "categorySelect" } %>
          <p class="mt-1 text-sm text-gray-500">Категорию нельзя изменить</p>
        </div>

        <!-- Динамические поля -->
        <div data-advertisements-target="dynamicFields"></div>

        <!-- Описание -->
        <div>
          <%= form.label :description, "Описание", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description,
                             rows: 3,
                             class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <!-- Цена -->
        <div>
          <%= form.label :price, "Цена", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">₽</span>
            </div>
            <%= form.number_field :price,
                                  class: "block w-full pl-7 pr-12 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                                  min: "0",
                                  step: "0.01" %>
          </div>
        </div>

        <!-- Город -->
        <div>
          <%= form.label :city_id, "Город", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :city_id,
                          options_for_select(@cities.map { |city| [city.name, city.city_id] }, @advertisement.city_id),
                          { include_blank: "Выберите город..." },
                          class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md",
                          required: true %>
        </div>

        <!-- Статус -->
        <div>
          <%= form.label :status, "Статус", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :status,
                          options_for_select([['Активно', 'active'], ['Продано', 'sold'], ['Снято', 'inactive'], ['Забронировано', 'reserved']], @advertisement.status),
                          {},
                          class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
        </div>

        <!-- Существующие фотографии -->
        <% if @advertisement.persisted? && @advertisement.advertisement_pictures.any? %>
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-700 mb-3">Текущие фотографии</h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
              <% @advertisement.advertisement_pictures.each do |picture| %>
                <div class="relative group">
                  <div class="relative pb-[75%] border rounded-lg overflow-hidden">
                    <% if picture.image.attached? %>
                      <%= image_tag picture.image.variant(resize_to_limit: [300, 300]),
                                    class: "absolute inset-0 w-full h-full object-cover" %>
                    <% else %>
                      <div class="absolute inset-0 bg-gray-200 flex items-center justify-center">
                        <span class="text-gray-400 text-xs">Нет фото</span>
                      </div>
                    <% end %>

                    <label class="absolute top-1 right-1 cursor-pointer opacity-0 group-hover:opacity-100 transition-opacity">
                      <input type="checkbox"
                             name="advertisement[delete_photos][]"
                             value="<%= picture.id %>"
                             class="hidden">
                      <div class="bg-red-600 text-white p-1 rounded-full hover:bg-red-700">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                      </div>
                    </label>
                  </div>
                </div>
              <% end %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Отметьте фотографии для удаления</p>
          </div>
        <% end %>

        <!-- Drag&Drop для новых фотографий -->
        <%= render 'advertisements/drag_drop_upload' %>

        <!-- Кнопки -->
        <div class="pt-6 border-t border-gray-200">
          <div class="flex justify-end space-x-3">
            <%= link_to "Отмена", advertisement_path(@advertisement),
                        class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= form.submit "Сохранить изменения",
                            class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>