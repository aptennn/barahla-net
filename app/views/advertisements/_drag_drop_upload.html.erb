<div data-controller="image-upload" class="mb-6">
  <label class="block text-sm font-medium text-gray-700 mb-2">
    Фотографии объявления
  </label>

  <p class="text-sm text-gray-500 mb-3">
    Перетащите фотографии или нажмите для выбора. Максимум 10 файлов, до 5MB каждый.
  </p>

  <!-- Скрытый input -->
  <input type="file"
         name="advertisement[pictures][]"
         multiple
         accept="image/*"
         class="hidden"
         data-image-upload-target="fileInput"
         data-action="change->image-upload#handleFileSelect">

  <!-- Dropzone -->
  <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center cursor-pointer hover:border-blue-400 hover:bg-blue-50 transition-colors"
       data-image-upload-target="dropzone">

    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
      <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>

    <p class="mt-2 text-sm text-gray-600">
      <span class="font-medium text-blue-600">Нажмите для загрузки</span> или перетащите файлы
    </p>
    <p class="mt-1 text-xs text-gray-500">
      PNG, JPG, GIF до 5MB
    </p>

    <div class="mt-2">
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
        <span data-image-upload-target="fileCount">0 файлов</span>
      </span>
    </div>
  </div>

  <!-- Превью -->
  <div class="mt-4 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3"
       data-image-upload-target="previewContainer">
  </div>

  <!-- Шаблон превью -->
  <template data-image-upload-target="previewTemplate">
    <div class="preview-item relative group">
      <div class="relative pb-[75%] border rounded-lg overflow-hidden">
        <img class="absolute inset-0 w-full h-full object-cover" src="#" alt="Preview">

        <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-opacity flex items-center justify-center">
          <button type="button"
                  class="delete-btn bg-red-600 text-white p-1.5 rounded-full hover:bg-red-700">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>

      <div class="mt-1 px-1">
        <p class="file-name text-xs font-medium text-gray-900 truncate"></p>
        <p class="file-size text-xs text-gray-500"></p>
      </div>
    </div>
  </template>
</div>