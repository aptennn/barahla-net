<!-- app/views/advertisements/_search_form.html.erb -->
<div class="bg-white rounded-xl shadow-md p-6 mb-8">
  <%= form_with url: advertisements_path, method: :get, local: true, class: "space-y-4" do |f| %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Поиск</label>

      <div class="flex rounded-lg border border-gray-300 overflow-hidden focus-within:ring-2 focus-within:ring-blue-500 focus-within:border-blue-500 shadow-sm">

        <%= f.search_field :query,
                           value: params[:query],
                           placeholder: "Что ищете? Например: iPhone, квартира, репетитор...",
                           class: "flex-1 px-4 py-3 border-0 focus:ring-0 focus:outline-none" %>


        <div class="w-px bg-gray-200"></div>


        <%= f.submit "Найти",
                     class: "bg-blue-600 text-white px-5 py-3 font-medium hover:bg-blue-700 transition whitespace-nowrap" %>
      </div>
    </div>

    <div class="flex items-center">
      <%= f.check_box :active_only,
                      {
                        checked: params[:active_only] != '0',
                        class: "h-4 w-4 text-blue-600 rounded focus:ring-blue-500"
                      },
                      '1',
                      '0' %>
      <%= f.label :active_only, "Показывать только активные объявления", class: "ml-2 text-sm text-gray-700" %>
    </div>
  <% end %>
</div>