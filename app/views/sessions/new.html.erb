<div class="min-h-screen bg-gradient-to-br from-blue-50 to-gray-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8 bg-white p-8 rounded-2xl shadow-xl">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Вход в систему
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Или
        <%= link_to "создать аккаунт", register_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>

    <% if flash[:alert] %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with url: login_path, local: true, class: "mt-8 space-y-6" do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, required: true, autofocus: true,
                              class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :password, "Пароль", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password, required: true,
                                 class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
          </div>
        </div>
      </div>

      <div>
        <%= f.submit "Войти",
                     class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "На главную", root_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
    </div>
  </div>
</div>