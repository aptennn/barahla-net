<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50">
  <!-- Навигация на всю ширину -->
  <% provide :navbar_title, "Мой профиль" %>
  <%= render "layouts/navbar" %>
  <!-- Контент на всю ширину -->
  <div class="w-full py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow-lg rounded-2xl p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Ваша информация</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gray-50 p-6 rounded-xl">
          <h3 class="text-lg font-semibold text-gray-800 mb-2">Основная информация</h3>
          <div class="space-y-2">
            <p><span class="font-medium">Имя пользователя:</span> <%= current_user.username %></p>
            <p><span class="font-medium">Email:</span> <%= current_user.email %></p>
            <% if current_user.phone.present? %>
              <p><span class="font-medium">Телефон:</span> <%= current_user.phone %></p>
            <% end %>
            <% if current_user.city.present? %>
              <p><span class="font-medium">Местоположение:</span> <%= current_user.city.full_location %></p>
            <% end %>
            <p><span class="font-medium">Дата регистрации:</span> <%= current_user.created_at.strftime("%d.%m.%Y") %></p>
            <p><span class="font-medium">Рейтинг:</span> <%= current_user.rating || "Еще нет оценок" %></p>
          </div>
        </div>

        <div class="bg-blue-50 p-6 rounded-xl">
          <h3 class="text-lg font-semibold text-blue-800 mb-2">Статус аккаунта</h3>
          <p class="text-blue-700">Аккаунт активен ✓</p>
          <div class="mt-4 space-y-2">
            <p class="text-gray-600 text-sm">✔ Доступны все функции</p>
            <p class="text-gray-600 text-sm">✔ Возможность публиковать объявления</p>
            <p class="text-gray-600 text-sm">✔ Общение с другими пользователями</p>
          </div>
        </div>
      </div>

      <div class="mt-8 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Быстрые действия</h3>
        <div class="flex flex-wrap gap-4">
          <%= link_to "Изменить профиль", edit_profile_path,
                      class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium transition duration-200" %>
          <%= link_to "Мои объявления", my_advertisements_path,
                      class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium transition duration-200" %>
        </div>
      </div>

      <!-- Дополнительная статистика -->
      <div class="mt-8 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Ваша активность</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-green-50 p-4 rounded-lg">
            <p class="text-sm text-green-800 font-medium">Опубликовано объявлений</p>
            <p class="text-2xl font-bold text-green-900 mt-2"><%= current_user.advertisements.count %></p>
          </div>
          <div class="bg-purple-50 p-4 rounded-lg">
            <p class="text-sm text-purple-800 font-medium">Активные чаты</p>
            <p class="text-2xl font-bold text-purple-900 mt-2">
              <%= current_user.chats_as_ad_owner.count + current_user.chats_as_user.count %>
            </p>
          </div>
          <div class="bg-orange-50 p-4 rounded-lg">
            <p class="text-sm text-orange-800 font-medium">Отправлено сообщений</p>
            <p class="text-2xl font-bold text-orange-900 mt-2"><%= current_user.sent_messages.count %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>