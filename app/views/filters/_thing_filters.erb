<div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4 border-t border-gray-100">
  <h4 class="col-span-full text-sm font-semibold text-gray-900 flex items-center">
    <svg class="w-4 h-4 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
    </svg>
    Фильтры для вещей
  </h4>

  <div>
    <%= f.label :item_type, "Тип вещи", class: "block text-sm text-gray-600 mb-1" %>
    <%= f.select :item_type,
                 options_for_select([
                                      ["Любой", ""],
                                      ["Электроника", "electronics"],
                                      ["Одежда", "clothing"],
                                      ["Книги", "books"],
                                      ["Для дома", "home"],
                                      ["Детское", "kids"],
                                      ["Прочее", "other"]
                                    ], params[:item_type]),
                 {},
                 class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :thing_name, "Название", class: "block text-sm text-gray-600 mb-1" %>
    <%= f.text_field :thing_name,
                     value: params[:thing_name],
                     placeholder: "iPhone, куртка",
                     class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
  </div>
</div>