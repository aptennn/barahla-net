<div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4 border-t border-gray-100">
  <h4 class="col-span-full text-sm font-semibold text-gray-900 flex items-center">
    <svg class="w-4 h-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>
    Фильтры для вакансий
  </h4>

  <div>
    <%= f.label :job_type, "Тип занятости", class: "block text-sm text-gray-600 mb-1" %>
    <%= f.select :job_type,
                 options_for_select([
                                      ["Любой", ""],
                                      ["Полная", "full"],
                                      ["Частичная", "part"],
                                      ["Проект", "project"],
                                      ["Стажировка", "internship"]
                                    ], params[:job_type]),
                 {},
                 class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :employment_type, "Формат", class: "block text-sm text-gray-600 mb-1" %>
    <%= f.select :employment_type,
                 options_for_select([
                                      ["Любой", ""],
                                      ["Офис", "office"],
                                      ["Удалёнка", "remote"],
                                      ["Гибрид", "hybrid"]
                                    ], params[:employment_type]),
                 {},
                 class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
  </div>
</div>