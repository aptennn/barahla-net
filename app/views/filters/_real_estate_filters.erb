<div class="space-y-6 pt-4 border-t border-gray-100">
  <h4 class="text-sm font-semibold text-gray-900 flex items-center">
    <svg class="w-4 h-4 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
    </svg>
    Фильтры для недвижимости
  </h4>

  <!-- Тип недвижимости и количество комнат в одной строке -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :property_type, "Тип", class: "block text-sm text-gray-600 mb-1" %>
      <%= f.select :property_type,
                   options_for_select([
                                        ["Любой", ""],
                                        ["Квартира", "apartment"],
                                        ["Дом", "house"],
                                        ["Комната", "room"],
                                        ["Участок", "land"]
                                      ], params[:property_type]),
                   {},
                   class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :rooms_count, "Комнат", class: "block text-sm text-gray-600 mb-1" %>
      <%= f.select :rooms_count,
                   options_for_select([
                                        ["Любое", ""],
                                        ["Студия", "0"],
                                        ["1", "1"],
                                        ["2", "2"],
                                        ["3", "3"],
                                        ["4+", "4"]
                                      ], params[:rooms_count]),
                   {},
                   class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- Площадь от в отдельной строке -->
  <div>
    <div class="block text-sm text-gray-600 mb-2">Площадь, м²</div>
    <div class="space-y-3">
      <div>
        <div class="flex items-center">
          <%= f.label :total_area_from, "от", class: "block text-xs text-gray-500 mr-2 w-8" %>
          <%= f.number_field :total_area_from,
                             value: params[:total_area_from],
                             min: 0,
                             step: 0.1,
                             placeholder: "30",
                             class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
        </div>
      </div>
      <div>
        <div class="flex items-center">
          <%= f.label :total_area_to, "до", class: "block text-xs text-gray-500 mr-2 w-8" %>
          <%= f.number_field :total_area_to,
                             value: params[:total_area_to],
                             min: 0,
                             step: 0.1,
                             placeholder: "100",
                             class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Этаж и этажность в одной строке -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <div class="flex items-center mb-1">
        <%= f.label :floor_from, "Этаж от", class: "block text-sm text-gray-600" %>
      </div>
      <%= f.number_field :floor_from,
                         value: params[:floor_from],
                         min: 0,
                         placeholder: "1",
                         class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
    </div>

    <div>
      <div class="flex items-center mb-1">
        <%= f.label :total_floors_from, "Этажность от", class: "block text-sm text-gray-600" %>
      </div>
      <%= f.number_field :total_floors_from,
                         value: params[:total_floors_from],
                         min: 1,
                         placeholder: "5",
                         class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500" %>
    </div>
  </div>
</div>