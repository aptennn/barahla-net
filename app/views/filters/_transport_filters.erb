<%# f — это form_builder, params — текущие параметры %>
<div class="space-y-4 pt-4 border-t border-gray-100">
  <h4 class="text-sm font-semibold text-gray-900 flex items-center">
    <svg class="w-4 h-4 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M12 8v4m0 4v.01" />
    </svg>
    Фильтры для транспорта
  </h4>

  <!-- Марка -->
  <div class="w-full">
    <%= f.label :brand, "Марка", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :brand,
                     value: params[:brand],
                     placeholder: "BMW, Lada...",
                     class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <!-- Год от -->
  <div class="w-full">
    <%= f.label :year_from, "Год от", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :year_from,
                       value: params[:year_from],
                       min: 1900,
                       max: Date.today.year,
                       placeholder: "Например, 2010",
                       class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <!-- Топливо -->
  <div class="w-full">
    <%= f.label :fuel_type, "Топливо", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :fuel_type,
                 options_for_select([
                                      ["Любое", ""],
                                      ["Бензин", "gasoline"],
                                      ["Дизель", "diesel"],
                                      ["Электро", "electric"],
                                      ["Гибрид", "hybrid"]
                                    ], params[:fuel_type]),
                 {},
                 class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>
</div>